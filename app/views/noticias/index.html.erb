	<div id="Breadcrumb">
		administração > <a href="/noticias/">notícias</a>
	</div>
	<div id="Content">
		<span class="Titulo">Noticias</span>
		<div class="Linha"></div>
		<div class="Toolbar">
			<li class="Add"><%= link_to "Novo" , new_noticia_path%></li>
			<li class="Help"><a href="#" id="btnAjuda">Ajuda</a></li>
		</div>
		<%= render :file  => "layouts/_admhelp.html.erb" %>
		<div id="Grid">
			<table width="100%" cellspacing="0" cellpadding="0" border="0">
			<% @noticias.each do |c| %>
			<tr class="bgCinzaC">
			<td class="Name"><li class="Bullet"><%=link_to c.titulo, noticia_path(c) %></li></td>
			<td class="Actions">
				<li class="Edit"><%= link_to "Editar", edit_noticia_path(c)%></li>
				<li class="Del"><%= link_to "Excluir", noticia_path(c), :method => :delete, :confirm => "Tem certeza?"%></li>
			</td>
			</tr>
			<% end %>
			</table>
		</div>
		<div class="Linha"></div>
	</div>